    max-width: 768px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .hero-container h3 span {
    white-space: nowrap;
  }

  .intro-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    margin: 2rem 0;
    padding: 0 2rem;
  }

  .contact-button {
    padding-top: 2em;
    padding-bottom: 2em;
    padding-right: 24px;
    flex: 1;
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
