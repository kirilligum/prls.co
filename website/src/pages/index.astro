  }

  .lp-section {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero-container {
    background: #ffffff;
    color: var(--hf-color);
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: flex-start;
    max-width: 2160px;
    /* margin: 0 auto; */
    margin: 0 auto;
    /* gap: 2rem; */
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    /* max-width: 600px; */
    align-items: flex-end;
    padding: 8rem 2rem;
    flex: 1 1 400px;
  }

  .pearl-symbol {
    font-size: 15em;
    font-weight: bold;
    color: var(--hf-color);
    text-align: center;
    display: block;
    margin-bottom: -0.1em;
    margin-top: -0.5em;
    padding-right: 48px;
  }
  .logo {
    text-align: right;
    margin-bottom: 1em;
  }

  .hero-bullets {
    width: 100%;
    text-align: right;
  }

  .hero-bullets ul {
    list-style: none;
    padding: 0;
    margin: 0;
    width: 100%;
  }

  .hero-bullets li {
    /* text-align: right; */
    position: relative;
  }

  .hero-bullets li {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 0.3em;
    font-size: 1.3em;
  }

  .hero-bullets li::after {
    content: "◦";
    font-size: 2em;
    line-height: 0;
    order: 2;
  }

  .hero-container h1,
  .hero-container h2,
  .hero-container h3 {
    margin: 0.5rem 0;
  }

  .hero-container h1,
  .hero-container h2 {
    font-family: "Libre Baskerville", serif;
    /* font-family: "Spectral", serif; */
    font-weight: 700;
    font-size: 4em;
  }

  .hero-container h2 {
    color: #000000;
  }

  .hero-container h3 {
    /* font-family: "Spectral", serif; */
    font-family: "Libre Baskerville", serif;
    /* font-weight: 300; */
