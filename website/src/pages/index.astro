    margin: 0 auto;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 40px;
    overflow-x: auto;
    padding: 20px 0;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .customer-logos::-webkit-scrollbar {
    display: none;
  }

  .customer-item {
