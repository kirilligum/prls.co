  }

  .intro-text {
    /* font-family: "Raleway", sans-serif; */
    /* flex: 2; */
    padding: 2rem;
    text-align: left;
  }

  @media (max-width: 1024px) {
    .hero-container {
      flex-direction: column;
    }

    .knowledge-visual-container {
      align-self: flex-start;
    }

    .hero-content {
      align-self: flex-end;
      padding: 2rem;
    }
  }

  li {
    margin-bottom: 0.5rem;
  }

  button {
    background-color: #ebf5f7;
    color: var(--hf-color);
    width: 100px;
    height: 100px;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    border-radius: 50%;
    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
    padding: 0;
    display: flex;
    align-items: center;
