---
interface Props {
  items: {
    iconHtml?: string;
    title?: string;
    description?: string;
    [key: string]: any;
  }[];
}

const { items } = Astro.props;
---

<ul>
  {
    items.map((item) => (
      <li>
        <div class="title-row">
          <Fragment set:html={item.iconHtml} />
          <h2>{item.title}</h2>
        </div>
        <p>{item.description}</p>
      </li>
    ))
  }
</ul>

<style>
  ul {
    display: flex;
    flex-direction: column;
    padding-top: 4rem;
  }

  li {
    display: flex;
    align-items: center;
    gap: 3rem;
    padding: 2.5rem 0;
  }

  h2 {
    font-size: 1.4rem;
    margin-bottom: 1rem;
    font-family: var(--font-heading);
  }

  p {
    font-size: 1.2em;
  }

  .title-row {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  :global(.step-number) {
    width: 60px;
    height: 60px;
    border: 2px solid var(--prls-main-surface-secondary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    font-family: var(--font-heading);
    font-weight: bold;
    font-size: 2em;
  }

  @media (max-width: 767px) {
    ul {
      padding-top: 1rem;
    }

    li {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem 0;
    }

    .title-row {
      width: 100%;
      gap: 1rem;
    }
  }
</style>
