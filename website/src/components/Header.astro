---
interface Props {
  title?: string;
}

const { title = "Pearls of Wisdom" } = Astro.props;
---

<div class="main-header" style="background-color: var(--hero-gradient-start);">
  <span class="header-pearl text-nowrap">
    <span class="header-symbol">à¼œ</span>{title}
  </span>
  <div class="header-content">
    <span class="header-links">
      <slot />
    </span>
  </div>
</div>

<style>
  .main-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1rem;
    background-color: var(--prls-main-surface-primary);
  }

  .header-pearl {
    font-family: var(--font-heading);
    font-size: 1.5em;
    font-weight: 500;
    margin-top: -1em;
    margin-bottom: -0.7em;
    color: var(--hf-color);
  }

  .header-symbol {
    font-size: 1.5em;
    position: relative;
    top: -0.12em;
    margin-right: 0.25em;
  }

  .header-content {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 1rem;
  }

  .header-links {
    text-align: right;
  }
</style>
