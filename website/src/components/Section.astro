---
import ContactButton from "./ContactButton.astro";

interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="section">
  <div class="section-header">
    <h1><Fragment set:html={title} /></h1>
    {
      subtitle && (
        <div class="section-intro">
          <p>{subtitle}</p>
        </div>
      )
    }
  </div>
  <div class="section-content">
    <slot />
  </div>
  <ContactButton />
</div>

<style>
  .section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    min-height: 100vh;
    flex-direction: column;
    /* align-items: center; */
    /* max-width: 1280px; */
    .section-header {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      max-width: 640px;
    }

    h1 {
      text-align: center;
      font-size: clamp(1.6rem, 6vw, 2.4rem);
      color: var(--prls-text-primary);
      font-family: var(--font-heading);
      padding-bottom: 3rem;
    }
    .section-intro {
      display: flex;
      justify-content: center;
      align-items: center;
      max-width: 640px;
      font-size: 1.2rem;
      margin-bottom: 2rem;
    }

    .section-content {
      /* max-width: 800px; */
      width: 100%;
    }
  }

  @media (max-width: 767px) {
    .section {
      padding: 2rem 0;
      min-height: 100vh;

      h1 {
        padding-bottom: 1rem;
      }
    }
  }
</style>
