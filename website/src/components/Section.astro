---
import ContactButton from './ContactButton.astro';

interface Props {
  title: string;
  subtitle?: string;
  items: {
    iconHtml: string;
    title: string;
    description: string;
  }[];
}

const { title, subtitle, items } = Astro.props;
---

<div class="section">
  <h1><Fragment set:html={title} /></h1>
  {subtitle && <p class="section-intro">{subtitle}</p>}
  <div class="section-content">
    <ul>
      {
        items.map((item) => (
          <li>
            <div class="title-row">
              <Fragment set:html={item.iconHtml} />
              <h2>{item.title}</h2>
            </div>
            <p>{item.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
  <ContactButton />
</div>

<style>
  .section {
    min-height: 100vh;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    h1 {
      text-align: center;
      /* font-size: 2.4rem; */
      font-size: clamp(1.6rem, 6vw, 2.4rem);
      color: var(--prls-text-primary);
      font-family: var(--font-heading);
      padding-bottom: 3rem;
      /* margin-bottom: 3rem; */
      /* padding-right: 2rem; */
    }
    h2 {
      font-size: 1.4rem;
      margin-bottom: 1rem;
      font-family: var(--font-heading);
      /* margin-bottom: 0.75rem; */
    }

    p {
      font-size: 1.2em;
    }
    .section-intro {
      max-width: 640px;
      margin-bottom: 2rem;
    }
    max-width: 1280px;
  }

  .section-content {
    /* margin: 3rem 0; */
    /* padding: 2rem; */
    max-width: 800px;
    /* margin-left: auto; */
    /* padding-top: 2rem; */
    ul {
      /* list-style: none; */
      /* padding: 0; */
      display: flex;
      flex-direction: column;
      padding-top: 4rem;
    }

    li {
      /* text-align: right; */
      /* position: relative; */
      /* padding-right: 3rem; */
      /* transition: transform 0.2s ease; */
      display: flex;
      /* flex-direction: row-reverse; */
      align-items: center;
      gap: 3rem;
      padding: 2.5rem 0;
    }

    .title-row {
      display: flex;
      /* width: 100%; */
      align-items: center;
      gap: 3rem;
    }
  }

  :global(.step-number) {
    width: 60px;
    height: 60px;
    border: 2px solid var(--prls-main-surface-secondary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    font-family: var(--font-heading);
    font-weight: bold;
    font-size: 2em;
  }

  @media (max-width: 767px) {
    .section {
      padding: 2rem 1rem;
      min-height: 100vh;
    }

    .section-content li {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem 0;
    }

    .title-row {
      display: flex;
      width: 100%;
      align-items: center;
      gap: 1rem;
    }

    .title-row :global(.material-icons),
    .title-row :global(.step-number) {
      margin-left: 0;
      transform: none;
      padding-left: 1em;
    }
    .title-row :global(.step-number) {
      padding-left: 0em;
    }

    .title-row h2 {
      /* width: 50%; */
      margin: 0;
    }
  }
</style>
