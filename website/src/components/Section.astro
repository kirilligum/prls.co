---
import ContactButton from "./ContactButton.astro";

interface Props {
  title: string;
  subtitle?: string;
  items?: {
    iconHtml?: string;
    title?: string;
    description?: string;
    [key: string]: any;
  }[];
}

const { title, subtitle, items } = Astro.props;
---

<div class="section">
  <h1><Fragment set:html={title} /></h1>
  {subtitle && <p class="section-intro">{subtitle}</p>}
  <div class="section-content">
    <slot />
    {
      items && (
        <ul class="section-items">
          {items.map((item) => (
            <li>
              <div class="title-row">
                <Fragment set:html={item.iconHtml} />
                <h2>{item.title}</h2>
              </div>
              <p>{item.description}</p>
            </li>
          ))}
        </ul>
      )
    }
  </div>
  <ContactButton />
</div>

<style>
  .section {
    min-height: 100vh;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 1280px;

    h1 {
      text-align: center;
      font-size: clamp(1.6rem, 6vw, 2.4rem);
      color: var(--prls-text-primary);
      font-family: var(--font-heading);
      padding-bottom: 3rem;
    }
  }

  .section-intro {
    max-width: 640px;
    margin-bottom: 2rem;
  }

  .section-content {
    max-width: 800px;
    width: 100%;
  }

  .section-items {
    display: flex;
    flex-direction: column;
    padding-top: 4rem;
  }

  .section-items li {
    display: flex;
    align-items: center;
    gap: 3rem;
    padding: 2.5rem 0;
  }

  .section-items h2 {
    font-size: 1.4rem;
    margin-bottom: 1rem;
    font-family: var(--font-heading);
  }

  .section-items p {
    font-size: 1.2em;
  }

  .title-row {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  @media (max-width: 767px) {
    .section {
      padding: 2rem 1rem;
      min-height: 100vh;
      
      h1 {
        padding-bottom: 1rem;
      }
    }

    .section-items {
      padding-top: 1rem;
    }

    .section-items li {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem 0;
    }

    .title-row {
      width: 100%;
      gap: 1rem;
    }
  }
</style>
