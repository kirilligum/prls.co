---
import ContactButton from "./ContactButton.astro";

interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="section">
  <h1><Fragment set:html={title} /></h1>
  {subtitle && <p class="section-intro">{subtitle}</p>}
  <div class="section-content">
    <slot />
  </div>
  <ContactButton />
</div>

<style>
  .section {
    min-height: 100vh;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 1280px;

    h1 {
      text-align: center;
      font-size: clamp(1.6rem, 6vw, 2.4rem);
      color: var(--prls-text-primary);
      font-family: var(--font-heading);
      padding-bottom: 3rem;
    }
  }

  .section-intro {
    max-width: 640px;
    margin-bottom: 2rem;
  }

  .section-content {
    max-width: 800px;
    width: 100%;
  }

  @media (max-width: 767px) {
    .section {
      padding: 2rem 1rem;
      min-height: 100vh;
      
      h1 {
        padding-bottom: 1rem;
      }
    }
  }
</style>
