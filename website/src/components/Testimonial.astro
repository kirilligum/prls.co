---
interface Props {
  testimonials: {
    quote: string;
    author: string;
    title: string;
    company: string;
    logoSrc: string;
    logoAlt: string;
    links: string[];
    companyUrl: string;
  }[];
}

const { testimonials } = Astro.props;
---

<div class="testimonials-container">
  {
    testimonials.map((testimonial) => (
      <article class="testimonial-card">
        <div class="testimonial-content">
          <blockquote>{testimonial.quote}</blockquote>
          <footer>
            <div class="meta-container">
              <div class="testimonial-meta">
                <cite>{testimonial.author}</cite>
                <span>
                  {testimonial.title}, {testimonial.company}
                </span>
              </div>
              <div class="customer-links">
                {testimonial.links.map((url) => (
                  <a href={url}>{url.split("/").pop()}</a>
                ))}
              </div>
            </div>
            <a href={testimonial.companyUrl} class="company-link">
              <img src={testimonial.logoSrc} alt={testimonial.logoAlt} />
            </a>
          </footer>
        </div>
      </article>
    ))
  }
</div>

<style>
  .testimonials-container {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;
    padding: 6rem 2rem;
    overflow-x: auto;
    width: 100%;
    max-width: 100%;
    scrollbar-width: none;
  }

  .testimonial-card {
    width: 480px;
    min-width: 480px;
    padding: 2rem;
    border: none;
    overflow: hidden;
    flex: 0 0 auto;
  }

  .testimonial-content {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .testimonial-content blockquote {
    flex: 1;
    font-family: var(--font-heading);
    font-size: 1.2em;
    line-height: 1.6;
    color: var(--prls-text-primary);
    margin: 0;
    font-style: italic;
    position: relative;
    padding-left: 2rem;
  }

  .testimonial-content blockquote::before {
    content: '"';
    position: absolute;
    left: 0;
    top: -0.5rem;
    font-size: 4em;
    color: var(--prls-main-surface-secondary);
    font-family: var(--font-heading);
  }

  .testimonial-content footer {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid var(--prls-main-surface-secondary);
    padding-bottom: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .meta-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
  }

  .testimonial-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    text-align: left;
  }

  .testimonial-meta cite {
    font-style: normal;
    font-weight: bold;
    font-size: 1.2em;
    color: var(--prls-text-primary);
  }

  .testimonial-meta span {
    color: var(--prls-text-secondary);
  }

  .customer-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.2rem;
    margin: 0;
    justify-content: flex-end;
    max-width: 50%;
  }

  .customer-links a {
    color: var(--prls-text-secondary);
    text-decoration: none;
    font-size: 0.8em;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .customer-links a:hover {
    color: var(--prls-text-primary);
    border-color: var(--prls-text-secondary);
  }

  .company-link {
    margin-top: 0.5rem;
  }

  .company-link img {
    height: 40px;
    width: auto;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .company-link:hover img {
    opacity: 1;
  }
</style>
