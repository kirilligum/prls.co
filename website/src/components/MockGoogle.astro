---
interface Props {
	query: string;
	response: string;
}

const { query, response } = Astro.props;
---

<div class="google-mock" style="height: 100%;">
	<div class="google-header">
		<svg
			class="google-logo"
			height="30"
			viewBox="0 0 92 30"
			width="92"
			xmlns="http://www.w3.org/2000/svg"
		>
			<path
				d="M38.9 15.51c0 4.26-3.32 7.39-7.4 7.39s-7.4-3.14-7.4-7.39c0-4.28 3.32-7.39 7.4-7.39s7.4 3.1 7.4 7.39zm-3.24 0c0-2.66-1.93-4.48-4.16-4.48-2.23 0-4.16 1.82-4.16 4.48 0 2.63 1.93 4.48 4.16 4.48 2.23 0 4.16-1.85 4.16-4.48z"
				fill="#EA4335"></path>
			<path
