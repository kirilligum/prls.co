---
interface Props {
  title: string;
}

const { title = "Pearls of Wisdom - SEO for LLMs" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&family=Questrial&family=Spectral:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <meta name="description" content="Astro description" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <header class="main-header">
    <span class="header-pearl text-nowrap"
      ><span class="header-symbol">à¼œ</span>Pearls of Wisdom</span
    >
    <span class="header-links"
      >Home | Pearls' Knowledge | Pearls' Analytics | Blog | About |
      <b>Contact</b> | App</span
    >
  </header>
  <body>
    <slot />
  </body>
  <footer>
    <p>
      &copy; 2024 Pearls of Wisdom | <a href="prls_co/1.html">AI Knowledge</a>
    </p>
  </footer>

  <style is:global>
    :root {
      /* Colors */
      --hf-color: #4d4d4d;
      --hf-bg-color: #ebf5f7;
      --prls-main-surface-primary: #f7f5f2;
      --prls-main-surface-secondary: #e6d9ce;
      --prls-text-primary: #3d3d3d;
      --prls-text-secondary: #5d5d5d;
      --prls-text-tertiary: #b4b4b4;

      /* Typography */
      --font-heading: "Libre Baskerville", serif;
      --font-body: "Questrial", sans-serif;
      

      /* Spacing */
      --spacing-xs: 0.25rem;
      --spacing-sm: 0.5rem;
      --spacing-md: 1rem;
      --spacing-lg: 2rem;
      --spacing-xl: 4rem;
    }

    /* Base styles */
    html {
      font-family: var(--font-body);
      color: var(--prls-text-primary);
      line-height: 1.6;
    }

    body {
      margin: 0;
      padding: 0;
      background-color: var(--prls-main-surface-primary);
    }

    .main-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: var(--spacing-xs) var(--spacing-md);
      background-color: var(--hf-bg-color);
    }

    .header-pearl {
      font-family: var(--font-heading);
      font-size: 1.5em;
      font-weight: 500;
      margin-top: -1em;
      margin-bottom: -0.7em;
      color: var(--hf-color);
    }

    .header-symbol {
      font-size: 1.5em;
      position: relative;
      top: -0.05em;
      margin-right: 0.25em;
      /* margin-top: -0.5em; */
      /* margin-bottom: -0.0em; */
    }

    .header-links {
      text-align: right;
    }

    footer {
      text-align: center;
      padding: 1rem;
      background-color: var(--hf-bg-color);
      color: var(--hf-color);
    }
  </style>


</html>
