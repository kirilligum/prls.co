---
interface Props {
  title: string;
}

const { title = "Pearls of Wisdom - SEO for LLMs" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&family=Questrial&family=Spectral:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <meta name="description" content="Astro description" />
    <link rel="icon" type="image/x-icon" href="/public/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <header class="main-header" style="background-color: var(--hf-bg-color);">
    <span class="header-pearl text-nowrap"
      ><span class="header-symbol">à¼œ</span>Pearls of Wisdom</span
    >
    <div class="header-content">
      <span class="header-links">
        Home | Pearls' Knowledge | Pearls' Analytics | Blog | About |
        <b>Contact</b> | App
      </span>
      <div class="color-controls">
        <div class="color-input">
          <label for="hf-color">Header/Footer (#4d4d4d)</label>
          <input type="color" id="hf-color" value="#4d4d4d">
        </div>
        <div class="color-input">
          <label for="surface-primary">Surface Primary (#f7f5f2)</label>
          <input type="color" id="surface-primary" value="#f7f5f2">
        </div>
        <div class="color-input">
          <label for="surface-secondary">Surface Secondary (#e6d9ce)</label>
          <input type="color" id="surface-secondary" value="#e6d9ce">
        </div>
        <div class="color-input">
          <label for="text-primary">Text Primary (#3d3d3d)</label>
          <input type="color" id="text-primary" value="#3d3d3d">
        </div>
        <div class="color-input">
          <label for="text-secondary">Text Secondary (#5d5d5d)</label>
          <input type="color" id="text-secondary" value="#5d5d5d">
        </div>
        <div class="color-input">
          <label for="text-tertiary">Text Tertiary (#b4b4b4)</label>
          <input type="color" id="text-tertiary" value="#b4b4b4">
        </div>
        <div class="color-input">
          <label for="hf-bg">Header/Footer BG (#ebf5f7)</label>
          <input type="color" id="hf-bg" value="#ebf5f7">
        </div>
        <div class="color-input">
          <label for="hero-gradient">Hero Gradient (#f2e6de)</label>
          <input type="color" id="hero-gradient" value="#f2e6de">
        </div>
      </div>
    </div>
  </header>
  <body>
    <slot />
  </body>
  <footer style="background-color: var(--hf-bg-color);">
    <p>
      &copy; 2024 Pearls of Wisdom | <a href="prls_co/1.html">AI Knowledge</a>
    </p>
  </footer>

  <script>
    function updateColor(varName, value) {
      document.documentElement.style.setProperty(`--${varName}`, value);
    }

    document.addEventListener('DOMContentLoaded', () => {
      const colorInputs = {
        'hf-color': 'hf-color',
        'hf-bg': 'hf-bg-color',
        'surface-primary': 'prls-main-surface-primary',
        'surface-secondary': 'prls-main-surface-secondary', 
        'text-primary': 'prls-text-primary',
        'text-secondary': 'prls-text-secondary',
        'text-tertiary': 'prls-text-tertiary',
        'hero-gradient': 'hero-gradient-start'
      };

      Object.entries(colorInputs).forEach(([inputId, varName]) => {
        const input = document.getElementById(inputId);
        input.addEventListener('input', (e) => {
          updateColor(varName, e.target.value);
        });
      });
    });
  </script>

  <style is:global>
    :root {
      /* Colors */
      --hf-color: #4d4d4d;
      --hf-bg-color: #ebf5f7;
      --prls-main-surface-primary: #f7f5f2;
      --prls-main-surface-secondary: #e6d9ce;
      --prls-text-primary: #3d3d3d;
      --prls-text-secondary: #5d5d5d;
      --prls-text-tertiary: #b4b4b4;
      --hero-gradient-start: #f2e6de;

      /* Typography */
      --font-heading: "Libre Baskerville", serif;
      --font-body: "Questrial", sans-serif;
      --font-weight-bold: 700;
      --line-height-body: 1.6;
      --text-lg: 1.2em;
    }

    /* Base styles */
    html {
      font-family: var(--font-body);
      color: var(--prls-text-primary);
      line-height: 1.6;
    }

    body {
      margin: 0;
      padding: 0;
      background-color: var(--hf-bg-color);
    }

    .main-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.25rem 1rem;
      background-color: var(--hf-bg-color);
    }

    .header-pearl {
      font-family: var(--font-heading);
      font-size: 1.5em;
      font-weight: 500;
      margin-top: -1em;
      margin-bottom: -0.7em;
      color: var(--hf-color);
    }

    .header-symbol {
      font-size: 1.5em;
      position: relative;
      top: -0.05em;
      margin-right: 0.25em;
      /* margin-top: -0.5em; */
      /* margin-bottom: -0.0em; */
    }

    .header-content {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 1rem;
    }

    .header-links {
      text-align: right;
    }

    .color-controls {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: flex-end;
    }

    .color-input {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.8em;
    }

    .color-input label {
      color: var(--hf-color);
    }

    .color-input input {
      width: 40px;
      height: 24px;
      padding: 0;
      border: 1px solid var(--prls-main-surface-secondary);
      border-radius: 4px;
      cursor: pointer;
    }

    footer {
      text-align: center;
      padding: 1rem;
      background-color: var(--prls-main-surface-primary);
      color: var(--hf-color);
      padding-top: 12rem;
    }
  </style>


</html>
